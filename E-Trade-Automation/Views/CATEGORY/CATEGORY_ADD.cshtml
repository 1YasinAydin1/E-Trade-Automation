@model Asp.NET_E_Commerce_MVC5_ENTITY_.Models.CATEGORY
@{
    ViewBag.Title = "CATEGORY_ADD";
    Layout = "~/Views/Shared/_ADMINLAYOUT.cshtml";
}
@section scripts {
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        $('swalFire').click(() => {
            Swal.fire({
                icon: 'success',
                title: 'Başarılı',
                text: 'İşlem başarı ile gerçekleştirildi!',
                confirmButtonText: 'Kapat'
            })
        });
    </script>
}

<div class="m-3">
    <div class="p-2 pl-4 mb-4  rounded" style="display:flex;flex-wrap:wrap;align-items:center;background-color:#434851">
        <div class="m-0 text-white" style="text-align:center;width:20%"><h5 class="m-0">Yeni Kategori Ekleme Formu</h5></div>
        <div class="bg-white rounded ml-5" style="height:2px;width:70%"></div>
    </div>
    <hr />
    
  
    <form class="form-group" method="post" enctype="multipart/form-data">
        @Html.Label("Kategori Ad")
        @Html.TextBoxFor(c => c.NAME, new { @class = "form-control" })
        <div style="position:relative">
            <span style="position:absolute;right:20px">@Html.ValidationMessage("NAME", new { @style = "color:red" })</span>
        </div>
        <br />
        @Html.Label("Kategori Resim Url")
        <br />
            <input name="CATEGORY_IMAGE" type="file" />
        <div style="position:relative">
            <span style="position:absolute;right:20px">@Html.ValidationMessage("IMAGE", new { @style = "color:red" })</span>
        </div>
        <br />
        <br />
        @Html.Label("Kategori Durumu")
        @Html.DropDownList("CATEGORY_STATUS",
                 new List<SelectListItem> {
                     new SelectListItem {
                        Text="True",
                        Value="1",
                        Selected = true
                     },
                     new SelectListItem {
                        Text="False",
                        Value="0",
                     },
                 }, new { @class = "form-control" })

        <button class="mt-3 btn btn-success">Ekle</button>
    </form>
  
</div>